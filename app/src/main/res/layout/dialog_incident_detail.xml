<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_stat_card"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título Incidencia"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDetailUrgency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgencia ALTA"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="#E74C3C"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDetailDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción..."
        android:textColor="#AAAAAA"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/imgDetailEvidence"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:src="@drawable/bg_dashed_border"/>

    <Button
        android:id="@+id/btnCloseDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:backgroundTint="#2A3441"
        android:layout_marginTop="16dp"/>
</LinearLayout>